<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 希望種別( :カメラマン、 :モデル、　:どちらでも) -->
        <TextView
            android:id="@+id/category_role_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="希望種別"
            android:textSize="20dp"/>
        <RadioGroup
            android:id="@+id/category_role"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/category_role_cameraman"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="カメラマン"/>
            <RadioButton
                android:id="@+id/category_role_model"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="モデル"/>
            <RadioButton
                android:id="@+id/category_role_none"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="指定なし"/>
        </RadioGroup>

        <!-- SNS種別(:Twitter、:instagram、:指定なし) -->
        <TextView
            android:id="@+id/category_sns_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="SNSの種類"
            android:textSize="20dp"/>
        <RadioGroup
            android:id="@+id/category_sns"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/category_sns_twitter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="Twitter"/>
            <RadioButton
                android:id="@+id/category_sns_instagram"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="instagram"/>
            <RadioButton
                android:id="@+id/category_sns_none"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="指定なし"/>
        </RadioGroup>

        <!-- SNSのアカウント名 -->
        <TextView
            android:id="@+id/sns_user_name_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="SNSアカウント名"
            android:textSize="20dp"
            />
        <EditText
            android:id="@+id/sns_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:hint="SNSでのユーザ名"
            android:inputType="text"
            android:focusedByDefault="false"/>

        <!-- 空き日 -->
        <TextView
            android:id="@+id/free_day_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="空き日"
            android:textSize="20dp" />
        <LinearLayout
            android:id="@+id/free_day"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">
            <CheckBox
                android:id="@+id/free_day_mon"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="月"/>
            <CheckBox
                android:id="@+id/free_day_tue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="火"/>
            <CheckBox
                android:id="@+id/free_day_wed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="水"/>
            <CheckBox
                android:id="@+id/free_day_thu"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="木"/>
            <CheckBox
                android:id="@+id/free_day_fri"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="金"/>
            <CheckBox
                android:id="@+id/free_day_sat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="土"/>
            <CheckBox
                android:id="@+id/free_day_sun"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="日"/>
            <CheckBox
                android:id="@+id/free_day_none"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="指定なし"/>
        </LinearLayout>

        <!-- 有償・無償 -->
        <TextView
            android:id="@+id/which_charge_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="有償・無償"
            android:textSize="20dp"/>
        <RadioGroup
            android:id="@+id/which_charge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/charge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="有償"/>
            <RadioButton
                android:id="@+id/no_charge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="無償"/>
            <RadioButton
                android:id="@+id/either"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="どちらでも"/>
        </RadioGroup>

        <!-- 地域 -->
        <TextView
            android:id="@+id/region_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="地域"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/spinner_region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:entries="@array/region_item"
            android:spinnerMode="dialog"
            />

        <!-- 性別 -->
        <TextView
            android:id="@+id/sex_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="性別"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/spinner_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:entries="@array/sex_item"
            android:spinnerMode="dropdown"
            />

        <!-- 年代 -->
        <TextView
            android:id="@+id/age_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="年代"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/spinner_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:entries="@array/age_item"
            android:spinnerMode="dialog"/>

