<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorFragmentBackground"
    android:clickable="true"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/back_button"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="25dp"
                    android:layout_gravity="left"
                    android:src="@drawable/back_button"/>

                <ImageView
                    android:id="@+id/category_image"
                    android:layout_width="@dimen/user_detail_category_role_icon_size"
                    android:layout_height="@dimen/user_detail_category_role_icon_size"
                    android:layout_gravity="center"
                    android:padding="5dp" />

                <TextView
                    android:id="@+id/display_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:gravity="center"
                    android:textSize="@dimen/user_detail_display_name_text_size"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/user_detail_item_padding_horizontal">

                    <ImageView
                        android:layout_width="@dimen/user_detail_item_icon_size"
                        android:layout_height="@dimen/user_detail_item_icon_size"
                        android:layout_marginEnd="@dimen/user_detail_item_icon_margin_end"
                        android:src="@drawable/image_category_sns" />

                    <TextView
                        android:id="@+id/category_sns"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/user_detail_item_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_detail_item_separator_height"
                    android:layout_marginHorizontal="@dimen/user_detail_item_separator_margin_horizontal"
                    android:layout_marginVertical="@dimen/user_detail_item_separator_margin_vertical"
                    android:background="#cccccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/user_detail_item_padding_horizontal">

                    <ImageView
                        android:layout_width="@dimen/user_detail_item_icon_size"
                        android:layout_height="@dimen/user_detail_item_icon_size"
                        android:layout_marginEnd="@dimen/user_detail_item_icon_margin_end"
                        android:src="@drawable/image_sns_user_name" />

                    <TextView
                        android:id="@+id/sns_user_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/user_detail_item_text_size" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_detail_item_separator_height"
                    android:layout_marginHorizontal="@dimen/user_detail_item_separator_margin_horizontal"
                    android:layout_marginVertical="@dimen/user_detail_item_separator_margin_vertical"
                    android:background="#cccccc" />

                <!-- FreeDay -->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/user_detail_item_padding_horizontal">

                    <ImageView
                        android:layout_width="@dimen/user_detail_item_icon_size"
                        android:layout_height="@dimen/user_detail_item_icon_size"
                        android:layout_marginEnd="@dimen/user_detail_item_icon_margin_end"
                        android:src="@drawable/image_region" />

                    <TextView
                        android:id="@+id/region"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/user_detail_item_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_detail_item_separator_height"
                    android:layout_marginHorizontal="@dimen/user_detail_item_separator_margin_horizontal"
                    android:layout_marginVertical="@dimen/user_detail_item_separator_margin_vertical"
                    android:background="#cccccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/user_detail_item_padding_horizontal">

                    <ImageView
                        android:layout_width="@dimen/user_detail_item_icon_size"
                        android:layout_height="@dimen/user_detail_item_icon_size"
                        android:layout_marginEnd="@dimen/user_detail_item_icon_margin_end"
                        android:src="@drawable/image_age" />

                    <TextView
                        android:id="@+id/age"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/user_detail_item_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_detail_item_separator_height"
                    android:layout_marginHorizontal="@dimen/user_detail_item_separator_margin_horizontal"
                    android:layout_marginVertical="@dimen/user_detail_item_separator_margin_vertical"
                    android:background="#cccccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/user_detail_item_padding_horizontal">

                    <ImageView
                        android:layout_width="@dimen/user_detail_item_icon_size"
                        android:layout_height="@dimen/user_detail_item_icon_size"
                        android:layout_marginEnd="@dimen/user_detail_item_icon_margin_end"
                        android:src="@drawable/image_sex" />

                    <TextView
                        android:id="@+id/sex"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/user_detail_item_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_detail_item_separator_height"
                    android:layout_marginHorizontal="@dimen/user_detail_item_separator_margin_horizontal"
                    android:layout_marginVertical="@dimen/user_detail_item_separator_margin_vertical"
                    android:background="#cccccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="@dimen/user_detail_item_padding_horizontal">

                    <ImageView
                        android:layout_width="@dimen/user_detail_item_icon_size"
                        android:layout_height="@dimen/user_detail_item_icon_size"
                        android:layout_marginEnd="@dimen/user_detail_item_icon_margin_end"
                        android:src="@drawable/image_which_charge" />

                    <TextView
                        android:id="@+id/which_charge"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/user_detail_item_text_size" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/user_detail_item_separator_height"
                    android:layout_marginHorizontal="@dimen/user_detail_item_separator_margin_horizontal"
                    android:layout_marginVertical="@dimen/user_detail_item_separator_margin_vertical"
                    android:background="#cccccc" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="20dp">

                    <ImageView
                        android:layout_width="@dimen/user_detail_item_icon_size"
                        android:layout_height="@dimen/user_detail_item_icon_size"
                        android:layout_marginEnd="@dimen/user_detail_item_icon_margin_end"
                        android:src="@drawable/image_imagination" />

                    <TextView
                        android:id="@+id/imagination_hope"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:breakStrategy="simple"
                        android:textSize="@dimen/user_detail_item_text_size" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center|bottom"
                android:orientation="vertical">

                <Button
                    android:id="@+id/sns_transition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/user_detail_item_padding_horizontal" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>